    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Bitter:400,700">

</head>
<body>

        <div class="header-dark">
            <nav class="navbar navbar-dark navbar-expand-md navigation-clean-search">
                <div class="container"><h4 class="navbar-brand">MR COFFEE </h4><button class="navbar-toggler" data-toggle="collapse" data-target="#navcol-1"><span class="sr-only">Toggle navigation</span><span class="navbar-toggler-icon"></span></button>
                    
                        
                        <form class="form-inline mr-auto" target="_self">
                        </form><a class="btn btn-light action-button" role="button" href="/">Login</a><a class="btn btn-light action-button" role="button" href="/new-user">New User</a><a class="btn btn-light action-button" role="button" href="/forgot-password">Forgot Password</a></div>
                </div>
            </nav>
            </div>
        </div>
 
    <main>
        
          
        
        <form  method="POST" action="/schedules" >
            

          <div class="row">
            <div class="col-md-6 mx-auto p-0">
            
                <div class="card">
                    <div class="login-box">
                        <ul>
                            <% if(typeof errors !='undefined') {  errors.forEach(error=>{ %>
                               <li> <%= error.message %> </li>
                              <% })} %>
                              </ul>
                          
                        <div class="login-snip"> <input id="tab-1" type="radio" name="tab" class="sign-in" checked><label for="tab-1" class="tab">Schedule Management App</label> <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab"></label>
                            <div class="login-space">
                                <div class="login">
                                    <div class="group"> <label for="email" class="label">Email</label> <input id="email" type="email" name = "email" class="input" placeholder="Enter your Email"> </div>
                                    <div class="group"> <label for="password" class="label">Password</label> <input id="password" type="password" name="password" class="input" data-type="password" placeholder="Enter your password"> </div>
                                    <div class="group"> <input type="submit" class="button" value="login"> </div>
                                    <div class="hr"></div>
                                     <div class="foot"><a href ="/new-user">New User </a></div>
                                    <div class="foot"> <a href="/forgot-password">Forgot Password?</a> </div>
                                  
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

      </form>
  
    
    </main>

    <%- include('../partials/footer') %>

</body>
